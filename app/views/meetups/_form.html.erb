<%= form_for(@meetup, html: {id: "registration"}) do |f| %>
  <% if @meetup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meetup.errors.count, "error") %> prohibited this meetup from being saved:</h2>

      <ul>
      <% @meetup.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag :member, params[:member] %>

  <p class="fontCR"><%= t("meetups.new.header_explain") %></p>
  <table>
    <tr>
      <th>Title</th>
      
      <td>
        <p><%= t("meetups.new.title_explain") %></p>
        <%= f.text_field :title %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :begin_at %><br /></th>
      <td><%= f.datetime_select :begin_at %></td>
    </tr>
    <tr>
      <th><%= f.label :end_at %><br /></th>
      <td><%= f.datetime_select :end_at %></td>
    </tr>
    <tr>
      <th><%= t("meetups.new.area") %><br /></th>
      <td>
        <p><%= t("meetups.new.area_explain") %></p>
        <%= f.collection_select(:area_id, Area.all, :id, :name) %>
      </td>
    </tr>
    <tr>
      <th><%= t("meetups.new.place") %><br /></th>
      <td>
        <p><%= t("meetups.new._explain") %></p>
        <%= f.text_field :place %>
      </td>
    </tr>
    <tr>
      <th><%= t("meetups.new.url") %><br /></th>
      <td>
        <p><%= t("meetups.new.url_explain") %></p>
        <%= f.text_field :url %>
      </td>
    </tr>
    <tr>
      <th>Publicness</th>
      <td>
        <%= t("meetups.new.public_explain") %><br>

        <span class="fontCB">
          public:Yes<br> private:No
        </span><br>

        <%= f.select :public, options_for_select([["public", 1], ["private", 0]], 1) %>
      </td>
    </tr>
  </table>

  <p class="textC"><%= f.submit "Send", {class: "btn1"} %></p>
<% end %>
