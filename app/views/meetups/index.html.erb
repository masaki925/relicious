<%= stylesheet_link_tag "views/message", :media => "all" %>

<!-- breadcrumb -->
<nav id="breadcrumb">
<p><a href="../" rel="index up">TOP</a> > Message</p>
</nav>
<!-- /breadcrumb -->

<!-- conversation -->
<div id="conversation">
  <% if params[:about] && params[:about] == 'me' %>
    <h2>My Meetups</h2>
  <% else %>
    <h2>Other Meetups</h2>
  <% end %>

  <div id="status-list">
    <!--
    <div id="sortArea">
      <select name="sort" class="sort">
        <option value="" id="filter-none"><a href="#">All Conversations</a></option>
        <option value="" id="filter-fixed"><a href="#">Fixed</a></option>
        <option value="" id="filter-past"><a href="#">Past</a></option>
        <option value="" id="filter-pending"><a href="#">Pending</a></option>
        <option value="" id="filter-declined"><a href="#">Declined</a></option>
        <option value="" id="filter-unread"><a href="#">Unread</a></option>
      </select>
    </div>
    -->

    <ul class="list">
      <% @meetups.each do |meetup| %>
        <% meetup.users.each do |u|
             next if u == current_user
             @target_user = u
             break
           end
           if @target_user.blank?
             @target_user = current_user
           end
           target_user_picture_url_square = "http://graph.facebook.com/#{@target_user.provider_uid}/picture?type=square"
         %>
        <li>
        <p class="thumb"><%= image_tag target_user_picture_url_square, width:"75", height:"75", alt:"" %></p>
        <p class="name"><%= link_to @target_user.name, user_path(@target_user) %></p>
        <p class="data"><%= link_to meetup.begin_at.strftime("%Y/%m/%d"), meetup_path(meetup) %></p>
        <p class="description"><%= link_to meetup.title, meetup_path(meetup) %></p>
        <!-- FIXME -->
        <p class="status fixed">fixed</p>
        </li>
      <% end if @meetups %>
    </ul>
  </div>

</div>
<!-- /conversation -->

