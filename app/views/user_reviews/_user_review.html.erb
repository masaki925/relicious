<div class="box1">
  <h4>From <%= link_to user_review.user.name, user_path(user_review.user) %></a></h4>
  <div class="aboutBox">
    <div class="imgArea">
      <% @review_user_picture_url = "http://graph.facebook.com/#{user_review.user.provider_uid}/picture?type=square" %>
      <%= image_tag @review_user_picture_url, width:"100", height:"100", alt:"" %>
    </div>

    <div class="positiveArea">
      <h5><%= t("general.recommend") %>: <%= user_review.recommend ? t("general.review_positive") : t("general.review_negative") %></h5>
      <dl>
        <dt><%= t("user_reviews.show.about_user", user: @user.name) %></dt>
        <dd><%= user_review.about_user %></dd>
        <dt><%= t("user_reviews.show.about_experience") %></dt>
        <dd><%= user_review.about_experience %></dd>
      </dl>
    </div>
    <p style="text-align:right;"><%= link_to "see detail", user_review_path(user_id: @user.id, id: user_review.id) %></p>
  </div>
</div>
