<header id="header">
<div id="headerArea">
  <div id="logo">
    <h1 id="logoTitle"><%= link_to image_tag("/assets/logo_alpha.jpg", width: "105", height: "60", alt: "Relicious"), root_path %></h1>
  </div>

  <nav>
  <ul id="nav">
    <li><%= link_to t("header.link.users_html"), users_path %></li>
    <li><%= link_to t("header.link.meetups_html"), meetups_path %></li>
  </ul>
  </nav>

  <div id="subInfo">
    <ul id="subInfoTop">
        <li><%= link_to "logout", logout_path %></li>
        <li><%= link_to current_user.name, user_path(current_user) %></li>
        <li><%= select_tag "language", options_for_select([["English", "en"], ["日本語", "ja"]], params[:lang]) %></li>
    </ul>
    <script>
      $("#language").change ( function () {
        window.location.replace('?lang='+this.value);
      });
    </script>

    <ul id="subInfoBottom">
      <!--<li class="messageLink"><a href=<%= "/meetups" %> >Message<span>2</span></a></li> -->
      <li class="messageLink"><a href=<%= "/users/#{current_user.id}/meetups" %> >your meetups</a></li>

      <li>
      <%= form_tag users_path, :method => 'get', id: "searchHeader" do %>
        <ul class="findSearch">
          <li> <%= text_field_tag "search[location]", "", placeholder: t("general.search.location_placeholder"), class: "textarea" %> </li>
          <li><%= submit_tag t("general.search.button"), :name => nil, class: "btn1" %></li>
        </ul>
      <% end %>
      </li>
    </ul>
  </div>
</div>
</header>
